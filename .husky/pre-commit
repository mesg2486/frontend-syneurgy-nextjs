#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo 'ðŸ¤– Pre-commit quality checks underway ...'

# Checking Prettier standards
pnpm format:fix ||
(
    echo 'ðŸ™„ Code formatting needs attention. Run "pnpm format" and reattempt the commit.'
    false;
)

# Checking ESLint Standards
pnpm eslint:check ||
(
    echo 'ðŸ™„ Code quality issues detected. Fix them as advised, add your changes, and try committing again.'
    false;
)

# Checking TypeScript type standards
pnpm types:check ||
(
    echo "ðŸ™„ Type checking didn't go as planned. Review and address the issues mentioned above."
    false;
)

echo 'âœ…âœ… All set! Committing immediately. âœ…âœ…'
